<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="gr.uom.jcaliper.plugin.menus.sampleMenu"
               label="JCaliper"
               mnemonic="C">
            <command
                  commandId="gr.uom.jcaliper.plugin.commands.focusTableView"
                  id="gr.uom.jcaliper.plugin.menus.focusTableView"
                  label="Show View"
                  mnemonic="V"
                  tooltip="Show JCaliper View">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  id="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  mnemonic="P"
                  style="push"
                  tooltip="General JCaliper Preferences">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="gr.uom.jcaliper.plugin.toolbars.sampleToolbar">
            <command
                  commandId="gr.uom.jcaliper.plugin.commands.focusTableView"
                  icon="icons/sample.gif"
                  id="gr.uom.jcaliper.plugin.toolbars.focusTableView"
                  tooltip="Class Responsibility Assignment Tool">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="JCaliper"
            icon="icons/sample.gif"
            class="gr.uom.jcaliper.plugin.ResultsTable"
            id="gr.uom.jcaliper.plugin.ResultsTable">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="gr.uom.jcaliper.plugin.ResultsTable">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="gr.uom.jcaliper.plugin.commands.focusTableView"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="gr.uom.jcaliper.plugin.ActionHandler"
            commandId="gr.uom.jcaliper.plugin.commands.focusTableView">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="gr.uom.jcaliper.plugin.commands.focusTableView"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="gr.uom.jcaliper.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="gr.uom.jcaliper.preferences.PreferencePage"
            id="gr.uom.jcaliper.preferences.PreferencePage"
            name="JCaliper">
      </page>
   </extension>

</plugin>
